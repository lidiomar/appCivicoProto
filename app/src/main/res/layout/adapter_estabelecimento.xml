<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/border_default"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_nome_fantasia"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Nome fantasia"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_vinculo_sus"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Vinculo SUS" />

    <TextView
        android:id="@+id/txt_vinculo_turno"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Turno de Atendimento" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/borda_cinza"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:id="@+id/container_avaliacao"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_media"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Media de avaliações: 5"
            android:layout_gravity="center_horizontal" />

        <RatingBar
            android:id="@+id/ratingbar_nota"
            android:layout_width="wrap_content"
            android:isIndicator="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button_info_avaliacoes"
        android:text="Informações"
        android:layout_gravity="center_horizontal" />



</LinearLayout>