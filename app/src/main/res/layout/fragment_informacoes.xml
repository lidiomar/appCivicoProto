<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nome_fantasia"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"
                            android:text="Nome fantasia"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/natureza"
                            android:layout_gravity="center_horizontal"
                            android:text="Natureza"
                            android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/linearlayout_geral_wrap"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:layout_marginBottom="15dp">

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tipo_unidade"
                            android:text="Unidade"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/esfera_administrativa"
                            android:text="Esfera administraviva"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/vinculo_sus"
                            android:text="SUS"
                            android:layout_marginBottom="5dp" />

                <!--        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/retencao" />-->

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fluxo_clientela"
                            android:text="Fluxo"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/turno_atendimento"
                            android:text="Turno"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/telefone"
                            android:text="Telefone" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <LinearLayout android:layout_height="wrap_content"
                android:id="@+id/linearlayout_endereco_wrap"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp">

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endereço"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/linearlayout_endereco_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/logradouro"
                        android:text="Logradouro"
                        android:layout_marginBottom="5dp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/numero"
                        android:text="Numero"
                        android:layout_marginBottom="5dp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bairro"
                        android:text="Bairro"
                        android:layout_marginBottom="5dp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cidade"
                        android:text="Cidade"
                        android:layout_marginBottom="5dp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/uf"
                        android:text="UF"
                        android:layout_marginBottom="5dp" />

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cep_estabelecimento"
                        android:text="CEP" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/linearlayout_informacoes_wrap"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp">

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informações adicionais"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/linearlayout_informacoes_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_atendimento_urgencia"
                            android:text="Urgencia"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_atendimento_ambulatorial"
                            android:text="Ambulatorial"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_centro_cirurgico"
                            android:text="Cirurgico"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_obstetra"
                            android:text="Obstetra"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_neonatal"
                            android:text="Neonatal"
                            android:layout_marginBottom="5dp" />

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tem_dialise"
                            android:text="Dialise"
                            android:layout_marginBottom="5dp" />

                        <!--<TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/descricao_completa" />-->

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/categoria_unidade"
                            android:text="Categoria" />
                    </LinearLayout>
             </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>